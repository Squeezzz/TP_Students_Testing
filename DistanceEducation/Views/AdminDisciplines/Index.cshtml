@model IEnumerable<DistanceEducation.Models.Discipline>

@{
    ViewData["Title"] = "Index";
}
@{
    int id = (int)TempData["userIdToIndex"];
}

<h1 class="question">Список дисциплин</h1>


<p>
    <a asp-action="Create" class="serch-btn btn-otpravit">Добавить дисциплину</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальная информация</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>


<br />
<div>
    <a asp-controller="Admin" asp-action="MainPageAdmin" asp-route-id="@id" class="serch-btn btn-otpravit">Вернуться на главную страницу</a>
</div>